{
  "extends": "@tsconfig/node20/tsconfig.json",
  "version": "4.4.2",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
